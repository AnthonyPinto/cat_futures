<h1>Sign up</h1>
<form action = "<%= users_url %>" method='post'>
  <input
    name="authenticity_token"
    type="hidden"
    value="<%= form_authenticity_token %>"
  >
  
  <!-- Username -->
  <label for="user_username">Username</label>
  <input
    type="text"
    name="user[username]"
    id="user_username"
    value="<%= @user.username %>"
  >
  
  <br><br>
  
  <!-- Ps=assword -->
  <label for="user_password">Password</label>
  <input
    type="password"
    name="user[password]"
    id="user_password"
  >
  
  <br><br>
  <br><br>

  <input type="submit" value="Sign up!">
</form>