<h1>Rent-A-Cat</h1>
<form action = "<%= cat_rental_requests_url %>" method='post'>
  <input
    name="authenticity_token"
    type="hidden"
    value="<%= form_authenticity_token %>"
  >
  
  <!-- Cats -->
  <label for="cat_id">Cat name</label>
  <!-- dropdown -->
  <select name="cat_rental_request[cat_id]" id="cat_id">
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br><br>
  
  <!-- Start date -->
  <label for="cat_rental_request_start_date">Start date</label>
  <input
    type="date"
    name="cat_rental_request[start_date]"
    id="cat_rental_request_start_date"
    value="<%= @cat_rental_request.start_date %>"
  >
  <br><br>
  
  <!-- End date -->
  <label for="cat_rental_request_end_date">End date</label>
  <input
    type="date"
    name="cat_rental_request[end_date]"
    id="cat_rental_request_end_date"
    value="<%= @cat_rental_request.end_date %>"
  >
  <br><br>
  <br><br>
  
  <input type="submit" value="Request Cat">
</form>